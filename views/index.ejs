<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/main.css" rel="stylesheet" type="text/css">
    <title>Events Registration App</title>
</head>

<body>
    <h1>Events</h1>
    <% events.forEach((event)=> { %>
        <div class="card-wrapper">
            <div class="card">
                <div class="card-body">
                    <h2>
                        <%= event.title %>
                    </h2>
                    <p>
                        <%= event.description %>
                    </p>
                    <p>
                        <%= event.event_date %>
                    </p>
                    <p>
                        <%= event.organizer %>
                    </p>
                    <button class="registration" data-event-id="<%= event.id %>">Register</button>
                    <button class="view" data-event-id="<%= event.id %>">View</button>
                </div>
            </div>
        </div>
        <% }) %>
            <script type="module" src="/src/script.js"></script>
</body>

</html>